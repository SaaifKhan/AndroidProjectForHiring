<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.residentFragment.ResidentInformationFragment">

        <RelativeLayout
            android:id="@+id/relativeTOpBAr"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="40dp">


            <ImageView
                android:id="@+id/imgBackRequest"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:scaleType="center"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_ios_"
                app:tint="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resident Survey Information"
                android:textSize="16sp"
                android:fontFamily="@font/raleway_semibold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBlack"/>


        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:scrollIndicators="right"
            android:layout_below="@+id/relativeTOpBAr"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearMainFormBody"
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/TvDescription_Request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Serial No"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etSerialNo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"
                    android:drawableTint="@android:color/black"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="Serial No"
                    android:inputType="number"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Name Of Person"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNameOfPerson"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"
                    android:drawableTint="@android:color/black"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="Name Of Person"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Father/Husband Name"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etFatherName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"
                    android:drawableTint="@android:color/black"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="Father/Husband Name"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Mother Name"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etMotherName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"
                    android:drawableTint="@android:color/black"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="Mother Name"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Address"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"
                    android:drawableTint="@android:color/black"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="Residential Address"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Mobile No"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"
                    android:drawableTint="@android:color/black"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="Mobile No"
                    android:inputType="phone"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Date of Birth"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etDateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"
                    android:drawableTint="@android:color/black"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="Date of Birth"
                    android:inputType="datetime"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Age In Years"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etAgeInYears"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"
                    android:drawableTint="@android:color/black"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="Age In Years"
                    android:inputType="number"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Gender"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp">


                    <LinearLayout
                        android:id="@+id/linearMr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/checkBtn1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_radio_button_unchecked_24"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/raleway_medium"
                            android:text="Male"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical">


                        <ImageView
                            android:id="@+id/checkBtn2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_radio_button_unchecked_24"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/raleway_medium"
                            android:text="Female" />
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Maritual Status"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvMaritalStatus"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:text="Marital Status"
                    android:inputType="none"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/rectangle"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/raleway_medium"/>

                <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/expandable_layout_marital_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="1000"
                    app:el_expanded="false"
                    app:el_parallax="0.5">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewMaritalStatus"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@id/expandable_layout"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_martial_list">

                    </androidx.recyclerview.widget.RecyclerView>
                </net.cachapa.expandablelayout.ExpandableLayout>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="What is your Education?"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEducation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:text="What is your education?"
                    android:inputType="none"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/rectangle"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/raleway_medium"/>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="1000"
                    app:el_expanded="false"
                    app:el_parallax="0.5">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewEducation"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@id/expandable_layout"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_education_list">

                    </androidx.recyclerview.widget.RecyclerView>
                </net.cachapa.expandablelayout.ExpandableLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="What is your occupation?"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvOccupation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:text="What is your occupation?"
                    android:inputType="none"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/rectangle"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/raleway_medium"/>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_occupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="1000"
                    app:el_expanded="false"
                    app:el_parallax="0.5">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewOccupation"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@id/expandable_layout"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_occupation_list">

                    </androidx.recyclerview.widget.RecyclerView>
                </net.cachapa.expandablelayout.ExpandableLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="How many children you have?"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etChildren"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"
                    android:drawableTint="@android:color/black"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="No of Children"
                    android:inputType="number"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Are you Currently Pregnant"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etPreg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle"
                    android:drawableTint="@android:color/black"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="preg Status"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />

            </LinearLayout>



            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/Ripple"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/linearMainFormBody"
                android:layout_marginTop="40dp"
                app:mrl_rippleColor="#070101">

                <TextView
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/sqaure_btn_color"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:text="Continue"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_below="@+id/Ripple"
                android:layout_height="40dp"/>





        </RelativeLayout>
        </ScrollView>



    </RelativeLayout>
</layout>